{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "removeComments": false,
    "preserveConstEnums": true,
    "noLib": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "classic",
    "declaration": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*config.js"
  ]
}